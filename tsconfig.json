{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "es2015",
    "strict": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "removeComments": true,
    "baseUrl": ".",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ]
}
